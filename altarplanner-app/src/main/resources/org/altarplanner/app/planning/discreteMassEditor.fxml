<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.altarplanner.app.planning.DiscreteMassEditor">
    <ToolBar>
        <Button mnemonicParsing="false" text="%add" onAction="#addDiscreteMass"/>
        <Button fx:id="removeButton" mnemonicParsing="false" text="%remove" onAction="#removeDiscreteMass"/>
        <Button mnemonicParsing="false" text="%generateFromRegularMasses" onAction="#generateFromRegularMasses"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" text="%loadFile" onAction="#loadFile"/>
        <Button mnemonicParsing="false" text="%saveAsAndExit" onAction="#saveAsAndExit"/>
    </ToolBar>
    <SplitPane dividerPositions="0.4" VBox.vgrow="SOMETIMES">
        <ListView fx:id="discreteMassListView"/>
        <VBox>
            <GridPane hgap="10.0" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <Label text="%dayOfWeek"/>
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1"/>
                <Label text="%time" GridPane.rowIndex="1"/>
                <TextField fx:id="timeTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="%church" GridPane.rowIndex="2"/>
                <TextField fx:id="churchTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="%form" GridPane.rowIndex="3"/>
                <TextField fx:id="formTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </GridPane>
            <TableView fx:id="serviceTypeCountTableView" editable="true" VBox.vgrow="SOMETIMES">
                <columns>
                    <TableColumn fx:id="serviceTypeNameColumn" text="%serviceType" editable="false" minWidth="200"/>
                    <TableColumn fx:id="serviceTypeCountColumn" text="%count" minWidth="45"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </SplitPane>
</VBox>
