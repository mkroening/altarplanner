<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.layout.Pane?>
<VBox fx:controller="org.altarplanner.app.planning.FeastDayEditor"
      minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <ToolBar>
        <Button mnemonicParsing="false" text="%general.button.add" onAction="#addFeastDay"/>
        <Button fx:id="removeButton" mnemonicParsing="false" text="%general.button.remove" onAction="#removeFeastDay"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" text="%feastDayEditor.button.applyAndClose" onAction="#applyAndClose"/>
    </ToolBar>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label minWidth="-Infinity" text="%feastDayEditor.label.feastDay"/>
        <DatePicker fx:id="datePicker"/>
    </HBox>
    <ListView fx:id="feastDayListView" VBox.vgrow="SOMETIMES" prefHeight="200"/>
</VBox>
